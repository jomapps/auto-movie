# Service URLs (Multi-App Architecture)
NEXT_PUBLIC_TASK_SERVICE_URL=http://localhost:8001
NEXT_PUBLIC_BRAIN_SERVICE_URL=https://brain.ft.tc
NEXT_PUBLIC_AGENTS_SERVICE_URL=http://localhost:8003

# Service API Keys
CELERY_TASK_API_KEY=your-celery-api-key
BRAIN_SERVICE_API_KEY=your-brain-service-api-key

# WebSocket & Auth
NEXTAUTH_URL=http://localhost:3010
